{{ 'categories.css' | asset_url | stylesheet_tag }}

<section class="categories-carousel">
  <div class="carousel-header">
    <h2>{{ section.settings.title }}</h2>
    <p>{{ section.settings.subtitle }}</p>
  </div>

  <div class="carousel-viewport">
    <div class="carousel-track" id="carousel-track">
      <!-- Categorías fijas, puedes cambiar las imágenes y nombres según tus necesidades -->
      <div class="category-card">
        <img src="{{ 'limpieza.jpg' | asset_url }}" alt="Categoría 1" width="200" height="200">
        <span>Limpieza Facial</span>
      </div>
      <div class="category-card">
        <img src="{{ 'hidratacion.avif' | asset_url }}" alt="Categoría 2" width="200" height="200">
        <span>Hidratación</span>
      </div>
      <div class="category-card">
        <img src="{{ 'tratamientos.jpeg' | asset_url }}" alt="Categoría 3" width="200" height="200">
        <span>Tratamientos</span>
      </div>
      <div class="category-card">
        <img src="{{ 'cuidado.webp' | asset_url }}" alt="Categoría 4" width="200" height="200">
        <span>Cuidado Corporal</span>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Carrusel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título de la sección",
      "default": "Nuestras categorías"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo de la sección",
      "default": "Descubre los productos por categoría"
    }
  ],
  "presets": [
    {
      "name": "Carrusel de categorías"
    }
  ]
}
{% endschema %}
