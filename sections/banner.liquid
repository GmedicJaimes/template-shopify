{{ 'banner.css' | asset_url | stylesheet_tag }}

<section class="custom-banner" style="text-align: center; ">
  <div class="banner-image-one">
    <img
      src="{{'banner2.jpg' | asset_url }}"
      alt="{{ section.settings.alt | escape }}"

      width="100%"
      height="600"
    >
    <div class="banner-title banner-title--{{ section.settings.title_position }}">
      <h2>{{ section.settings.message }}</h2>
    </div>
  </div>
  <div class="banner-image-two">
    <div class="content-image">
      <img
        src="{{'cosmeticos-naturales.webp' | asset_url }}"
        alt="{{ section.settings.alt | escape }}"

        width="1200"
        height="600"
      >
    </div>
    <div class="content-image-t">
      <img
        src="{{'banner3.jpg' | asset_url }}"
        alt="{{ section.settings.alt | escape }}"

        width="1200"
        height="600"
      >
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "text",
      "id": "alt",
      "label": "Texto alternativo de la imagen",
      "default": "Banner"
    },
    {
      "type": "text",
      "id": "message",
      "label": "Mensaje del banner",
      "default": "¡Bienvenido a nuestra tienda!"
    },
    {
      "type": "select",
      "id": "title_position",
      "label": "Posición del título",
      "default": "top",
      "options": [
        { "value": "top", "label": "Arriba" },
        { "value": "center", "label": "Centro" },
        { "value": "bottom", "label": "Abajo" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner con imagen y mensaje"
    }
  ]
}
{% endschema %}
